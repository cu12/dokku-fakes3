#!/usr/bin/env bash
export FAKES3_IMAGE=${FAKES3_IMAGE:="convox/aws-s3"}
export FAKES3_IMAGE_VERSION=${FAKES3_IMAGE_VERSION:="latest"}
export FAKES3_ROOT=${FAKES3_ROOT:="/var/lib/dokku/services/fakes3"}

export PLUGIN_COMMAND_PREFIX="S3"
export PLUGIN_DATA_ROOT=$FAKES3_ROOT
export PLUGIN_DATASTORE_PORTS=(80)
export PLUGIN_DEFAULT_ALIAS="S3"
export PLUGIN_ALT_ALIAS="DOKKU_FAKES3"
export PLUGIN_IMAGE=$FAKES3_IMAGE
export PLUGIN_IMAGE_VERSION=$FAKES3_IMAGE_VERSION
export PLUGIN_SCHEME="FAKES3"
export PLUGIN_SERVICE="FAKES3"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
