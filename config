#!/usr/bin/env bash
export S3RVER_IMAGE=${S3RVER_IMAGE:="seayou/s3rver"}
export S3RVER_IMAGE_VERSION=${S3RVER_IMAGE_VERSION:="latest"}
export S3RVER_ROOT=${S3RVER_ROOT:="/var/lib/dokku/services/s3rver"}

export PLUGIN_COMMAND_PREFIX="s3"
export PLUGIN_DATA_ROOT=$S3RVER_ROOT
export PLUGIN_DATASTORE_PORTS=(5000)
export PLUGIN_DEFAULT_ALIAS="S3"
export PLUGIN_ALT_ALIAS="DOKKU_S3RVER"
export PLUGIN_IMAGE=$S3RVER_IMAGE
export PLUGIN_IMAGE_VERSION=$S3RVER_IMAGE_VERSION
export PLUGIN_SCHEME="http"
export PLUGIN_SERVICE="s3rver"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
